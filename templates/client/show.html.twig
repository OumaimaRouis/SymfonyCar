{% extends 'base.html.twig' %}

{% block title %}Détail de client{% endblock %}

{% block body %}
    <h1>Détail de client</h1>
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <section class="widget">
            <header>
                <div class="widget-controls">
                    <a href="{{ path('client_index') }}" class="btn  btn-lg btn-secondary">Retour</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn  btn-lg btn-warning">Modifier</a>
                    {{ include('client/_delete_form.html.twig') }}
                </div>
            </header>
            <div class="body">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ client.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ client.prenom }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ client.tel }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ client.adresse }}</td>
            </tr>
        </tbody>
    </table>


</div>
        </section>
    </div>
</div>
{% endblock %}
